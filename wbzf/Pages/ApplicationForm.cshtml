@page
@using wbzf.Utility;
@model wbzf.Pages.ApplicationFormModel
@{
    ViewData["Title"]="Scholarship";
}

<section class="promo-primary  promo-primary--shop">
    <picture>
        <source srcset="img/all page header.jpg" media="(min-width: 992px)" /><img class="img--bg" src="img/all page header.jpg" alt="img" />
    </picture>

    <div class="container">
        <div class="row">
            <div class="col-auto">
                <div class="align-container">
                    <div class="align-container__item">
                        <span class="promo-primary__pre-title">WBZF</span>
                        <h1 class="promo-primary__title"><span>@ViewData["Title"]</span></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<form method="post" id="student" enctype="multipart/form-data">

    <div class="container">
        <div class="col-lg-12">
            <div class="panel-body">


                <div class="panel panel-color panel-teal">
                    <div class="panel-heading">


                        <h3 class="panel-title">Personal Details</h3>

                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Name of the Applicant <span class="text-danger">*</span></label>
                                    <input type="text" asp-for=scholarshipApplication.Name class="form-control" requried="" placeholder="Enter Student's Name">
                                    <span asp-validation-for="scholarshipApplication.Name" class=" text-danger"></span>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Name of Father / Mother / Guardian<span class="text-danger">*</span> </label>
                                    <input type="text" asp-for=scholarshipApplication.guardain_name class="form-control" requried="" placeholder="Enter Husband/Guardian Name">
                                    <span asp-validation-for="scholarshipApplication.guardain_name" class=" text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Mobile No </label>
                                    <input type="text" asp-for=scholarshipApplication.Mobile class="form-control" requried="" placeholder="Enter Your Mobile No">
                                    <span asp-validation-for="scholarshipApplication.Mobile" class=" text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Email<span class="text-danger">(*)</span></label>
                                    <input type="text" asp-for=scholarshipApplication.Email class="form-control" requried="" placeholder="Enter Your Email">
                                    <span asp-validation-for="scholarshipApplication.Email" class=" text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Whatsapp No</label>
                                    <input type="text" asp-for=scholarshipApplication.Whatsappno class="form-control" requried="" placeholder="Enter WhatsApp Number">
                                    <span asp-validation-for="scholarshipApplication.Whatsappno" class=" text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Aadhaar No</label>
                                    <input asp-for="scholarshipApplication.aadharno" type="number" maxlength="12" oninput="javascript: if (this.value.length> this.maxLength) this.value = this.value.slice(0, this.maxLength);" class="form-control" placeholder="Enter Aadhaar Number">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Gender</label>
                                    <select asp-for="scholarshipApplication.Gender" class="form-control">
                                        <option selected="selected" value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Otehrs">Others</option>

                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Date of Birth</label>
                                    <div>
                                        <div class="input-group">
                                            <input asp-for="scholarshipApplication.DateOfBirth" type="text" maxlength="10" oninput="javascript: if (this.value.length> this.maxLength) this.value = this.value.slice(0, this.maxLength);" class="form-control datepicker" autocomplete="off">
                                            <span class="input-group-addon bg-custom b-0"><i class="mdi mdi-calendar text-white"></i></span>
                                        </div>
                                        <!-- input-group -->
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Category</label>
                                    <select asp-for="scholarshipApplication.category" class="form-control">
                                        <option selected="selected" value="@SD.GEN">@SD.GEN</option>
                                        <option value="@SD.OBC_A">@SD.OBC_A</option>
                                        <option value="@SD.OBC_B">@SD.OBC_B</option>
                                        <option value="@SD.SC">@SD.SC</option>
                                        <option value="@SD.ST">@SD.ST</option>

                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.col -->
                <div class="panel panel-color panel-teal">
                    <div class="panel-heading">


                        <h3 class="panel-title">Address</h3>

                    </div>
                    <div class="panel-body">
                        <div class="row">

                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <input type="text" asp-for=scholarshipApplication.Vill_Ward class="form-control" placeholder="House No/ Village/ Para / Ward">
                                    <span asp-validation-for="scholarshipApplication.Vill_Ward" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <input type="text" asp-for=scholarshipApplication.Road class="form-control" placeholder="Enter the Name of Road">
                                    <span asp-validation-for="scholarshipApplication.Road" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <input type="text" asp-for=scholarshipApplication.PostOffice class="form-control" placeholder="Enter your Post Office Name">
                                    <span asp-validation-for="scholarshipApplication.PostOffice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <input type="text" asp-for=scholarshipApplication.PS class="form-control" placeholder="Enter your Police Station Name">
                                    <span asp-validation-for="scholarshipApplication.PS" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <input type="text" asp-for=scholarshipApplication.District class="form-control" placeholder="Enter your District Name">
                                    <span asp-validation-for="scholarshipApplication.District" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <input type="text" asp-for=scholarshipApplication.PIN class="form-control" placeholder="Enter Your PIN">
                                    <span asp-validation-for="scholarshipApplication.PIN" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>


                <div class="panel panel-color panel-teal">
                    <div class="panel-heading">


                        <h3 class="panel-title">Upload Documents</h3>

                    </div>
                    <div class="panel-body">

                        <div class="col-md-2">
                            <div class="thumbnail">
                                @if (Model.scholarshipApplication.admitcardUrl != null)
                                {
                                    <img id="studentPic" class="img-responsive user-img" src="@Model.scholarshipApplication.admitcardUrl" style="height: 120px; width: 120px;" alt="image">

                                }
                                else
                                {
                                    <img src="controller/Image/DemoPic.jpg" id="studentPic" class="img-responsive user-img" style="height: 120px; width: 120px;" alt="image">

                                }

                                <div class="caption">
                                    <h3>Madhyamik Admit Card</h3>

                                    <p>
                                        <input type="file"
                                               accept=".png,.jpg,.jpeg"
                                               asp-for="scholarshipApplication.admitcardUrl"
                                               class="form-control"
                                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                               onchange="photoSet(this,'studentPic')" />
                                        <span asp-validation-for="scholarshipApplication.admitcardUrl" class="text-danger"></span>

                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="thumbnail">
                                @if (Model.scholarshipApplication.examResultUrl != null)
                                {
                                    <img id="studentPic" class="img-responsive user-img" src="@Model.scholarshipApplication.examResultUrl" style="height: 120px; width: 120px;" alt="image">

                                }
                                else
                                {
                                    <img src="controller/Image/DemoPic.jpg" id="studentPic" class="img-responsive user-img" style="height: 120px; width: 120px;" alt="image">

                                }

                                <div class="caption">
                                    <h3>Exam Result/ Score Card</h3>

                                    <p>
                                        <input type="file"
                                               accept=".png,.jpg,.jpeg"
                                               asp-for="scholarshipApplication.examResultUrl"
                                               class="form-control"
                                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                               onchange="photoSet(this,'studentPic')" />
                                        <span asp-validation-for="scholarshipApplication.examResultUrl" class="text-danger"></span>

                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="thumbnail">
                                @if (Model.scholarshipApplication.admissionReceiptUrl != null)
                                {
                                    <img id="studentPic" class="img-responsive user-img" src="@Model.scholarshipApplication.admissionReceiptUrl" style="height: 120px; width: 120px;" alt="image">

                                }
                                else
                                {
                                    <img src="controller/Image/DemoPic.jpg" id="studentPic" class="img-responsive user-img" style="height: 120px; width: 120px;" alt="image">

                                }

                                <div class="caption">
                                    <h3>Admission Receipt</h3>

                                    <p>
                                        <input type="file"
                                               accept=".png,.jpg,.jpeg"
                                               asp-for="scholarshipApplication.admissionReceiptUrl"
                                               class="form-control"
                                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                               onchange="photoSet(this,'studentPic')" />
                                        <span asp-validation-for="scholarshipApplication.admissionReceiptUrl" class="text-danger"></span>

                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="thumbnail">
                                @if (Model.scholarshipApplication.passbookUrl != null)
                                {
                                    <img id="studentPic" class="img-responsive user-img" src="@Model.scholarshipApplication.passbookUrl" style="height: 120px; width: 120px;" alt="image">

                                }
                                else
                                {
                                    <img src="controller/Image/DemoPic.jpg" id="studentPic" class="img-responsive user-img" style="height: 120px; width: 120px;" alt="image">

                                }

                                <div class="caption">
                                    <h3>Bank Passbook Front Page</h3>

                                    <p>
                                        <input type="file"
                                               accept=".png,.jpg,.jpeg"
                                               asp-for="scholarshipApplication.passbookUrl"
                                               class="form-control"
                                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                               onchange="photoSet(this,'studentPic')" />
                                        <span asp-validation-for="scholarshipApplication.passbookUrl" class="text-danger"></span>

                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="thumbnail">
                                @if (Model.scholarshipApplication.admitcardUrl != null)
                                {
                                    <img id="studentPic" class="img-responsive user-img" src="@Model.scholarshipApplication.aadharCardUrl" style="height: 120px; width: 120px;" alt="image">

                                }
                                else
                                {
                                    <img src="controller/Image/DemoPic.jpg" id="studentPic" class="img-responsive user-img" style="height: 120px; width: 120px;" alt="image">

                                }

                                <div class="caption">
                                    <h3>Aadhaar Card</h3>

                                    <p>
                                        <input type="file"
                                               accept=".png,.jpg,.jpeg"
                                               asp-for="scholarshipApplication.aadharCardUrl"
                                               class="form-control"
                                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                               onchange="photoSet(this,'studentPic')" />
                                        <span asp-validation-for="scholarshipApplication.aadharCardUrl" class="text-danger"></span>

                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="thumbnail">
                                @if (Model.scholarshipApplication.incomeCertificateUrl != null)
                                {
                                    <img id="studentPic" class="img-responsive user-img" src="@Model.scholarshipApplication.incomeCertificateUrl" style="height: 120px; width: 120px;" alt="image">

                                }
                                else
                                {
                                    <img src="controller/Image/DemoPic.jpg" id="studentPic" class="img-responsive user-img" style="height: 120px; width: 120px;" alt="image">

                                }

                                <div class="caption">
                                    <h3>Income Certificate</h3>

                                    <p>
                                        <input type="file"
                                               accept=".png,.jpg,.jpeg"
                                               asp-for="scholarshipApplication.incomeCertificateUrl"
                                               class="form-control"
                                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                               onchange="photoSet(this,'studentPic')" />
                                        <span asp-validation-for="scholarshipApplication.incomeCertificateUrl" class="text-danger"></span>

                                    </p>
                                </div>
                            </div>
                        </div>



                        <div class="col-md-12">
                            <div id="ContentPlaceHolder1_ContactUC2_divtermsandconditions" class="form-group">
                                <div class="col-xs-12">
                                    <div class="checkbox checkbox-success">
                                        <input id="terms" type="checkbox" name="terms">
                                        <label for="terms">@Model.company_terms</label>
                                    </div>
                                    <span id="terms_error" class="text-danger"></span>
                                </div>
                            </div>


                        </div>
                        <div class="col-md-3 pull-right">
                            <button type="submit" class="btn btn-block btn-md btn-success" asp-page-handler="Submit" style="font-size:medium">Save </button>
                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
</form>

@section scripts{
    <script>
        $(document).ready(function () {
            var checkid = $('#popup_stat').val();
            viewElement(checkid);


            $('#popup_stat').change(function () {
                viewElement($(this).val());
            });

        });

        function viewElement(f) {
            if (f == 'false') {
                $('#image_area').hide();
                return true;
            }
            else if (f === 'true') {
                $('#image_area').show();
                return true;
            }
        }
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}


