@using wbzf.Utility;
@using wbzf.Model;
@model TransactionHistory
@{
    // var status = Model.First().status;
}

<div id="MyPopup" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="full-width-modalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-full">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title">
                    Transaction Details
                </h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Transaction Id</th>
                        <th>From A/C Name</th>
                        <th>From A/C Number</th>
                        <th>Transaction Purpose</th>
                        @if (Model.Transaction_Purpose == SD.Account_Transfer)
                        {
                            <th>To A/C Name</th>
                            <th>To A/C Number</th>
                        }

                        <th>Amount</th>
                        <th>Transaction Charges</th>
                        @if (Model.Transaction_Purpose == SD.Deposite)
                        {
                            <th>Received Amount</th>
                        }
                        @if (Model.Transaction_Purpose != SD.Deposite && Model.PayTo_Id != null)
                        {
                            <th>Pay To </th>
                        }
                        <th>Payment Getway Id</th>
                        <th>Payment Getway Transaction Id</th>
                        <th>Payment Status</th>
                        <th>User Name</th>
                        <th>Date</th>
                        <th>Remarks</th>

                    </tr>

                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.Accounts.Name</td>
                        <td>@Model.Accounts.Account_no</td>
                        <td>@Model.Transaction_Purpose</td>
                        @if (Model.Transaction_Purpose == SD.Account_Transfer)
                        {
                            <td>@Model.ToAccounts.Name</td>
                            <td>@Model.ToAccounts.Account_no</td>
                        }
                        <td>@Model.Amount</td>
                        <td>@Model.transaction_fees</td>
                        @if (Model.Transaction_Purpose == SD.Deposite)
                        {
                            <td>@Model.received_amount</td>
                        }
                        @if (Model.Transaction_Purpose != SD.Deposite && Model.PayTo_Id  != null)
                        {
                            <td>@Model.PayTo.Full_Name</td>
                        }
                        <td>@Model.PaymentGetWay_Id</td>
                        <td>@Model.PaymentGetWay_TxnId</td>

                        <td>@Model.Payment_Status</td>
                        <td>@Model.PayBy.Full_Name</td>
                        <td>@Model.Created_at.ToString("dd/MM/yyyy")</td>
                        <td>@Model.Remarks</td>

                    </tr>

                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning pull-left" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
