@page "/news/{id}"
@model wbzf.Pages.NewsDetailsModel
@{
    ViewData["Title"] = Model.news.Title + " | " + Model.company.name;
    string pageUrl=Model.company.url+"/news/"+Model.news.Id;
}
@section Styles{
<meta property="og:url" content="@pageUrl" />
<meta property="og:type" content="website" />
<meta property="og:title" content="@ViewData" />
<meta property="og:description" content="@Model.company.name" />
<meta property="og:image" content="@Model.news.ImageUrl" />

}


<section class="promo-primary  promo-primary--shop">
    <picture>
        <source srcset="~/img/all page header.jpg" media="(min-width: 992px)" /><img class="img--bg" src="~/img/all page header.jpg" alt="img" />
    </picture>

    <div class="container">
        <div class="row">
            <div class="col-auto">
                <div class="align-container">
                    <div class="align-container__item">
                        <span class="promo-primary__pre-title">News Update</span>
                        <h1 class="promo-primary__title"><span>@Model.news.Title</span></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- info banner start-->
<section class="section no-padding-top">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="info-banner">
                    <img class="img--layout" src="~/img/info-banner_layout.png" alt="img" />
                    <div class="row margin-bottom">
                        <div class="col-12">
                            <div class="heading heading--primary heading--center">
                                <h2 class="heading__title no-margin-bottom"><span>@Model.news.Title</span></h2>
                               
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-lg-12">
                            <div class="info-banner__img"><img src="@Model.news.ImageUrl" alt="img" /></div>
                        </div>


                    </div>
                    <div class="storie-details__details">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="storie-details__tags">Media Organization Name : <a class="storie-details__tag" href="#">@Model.news.NewsOrganizationName</a> </div>
                            </div>
                            <div class="col-md-4">
                                <ul class="storie-details__socials">
                                    <li><a href="https://facebook.com/sharer.php?u=@pageUrl"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                  

                                    <li><a href="https://api.whatsapp.com/send/?text=@ViewData["Title"]%20%20%20%20 @pageUrl"><i class="fa fa-whatsapp" aria-hidden="true"></i></a></li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- info banner end-->
