                                                    <span asp-validation-for="InputModel.guardianIncome " class=" text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- /.col -->
                    <div class="panel panel-color panel-teal">
                        <div class="panel-heading">


                            <h3 class="panel-title">Address Details</h3>

                        </div>
                        <div class="panel-body">
                            <div class="row">

                                <div class="col-lg-6 col-sm-6">
                                    <div class="form-group">
                                        <label>House No/ Village/ Para / Ward</label>
                                        <input class="form__field" type="text" required asp-for=InputModel.Vill class="form-control" placeholder="House No/ Village/ Para / Ward">
