@page "/App/{purpose}/{purposeId:int}"
@using wbzf.Utility;
@model wbzf.Areas.Admin.Pages.Applications.ApplicationListModel
@{
    ViewData["Title"] = "List Application under " + Model.purpose.Name;
}
<div class="row">
    <div class="col-xs-12">
        <div class="page-title-box">
            <h4 class="page-title"> @ViewData["Title"] </h4>
            <ol class="breadcrumb p-0 m-0">
                <li>
                    <a asp-area="Admin" asp-page="/dashboard">Home</a>
                </li>

                <li class="active">
                    @ViewData["Title"]
                </li>

            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form method="post">
        <div class="panel panel-color panel-primary">
            <div class="panel-heading">
                <input asp-for="@Model.purpose.Id" type="hidden"/>
                <h3 class="panel-title">Search Application</h3>
            </div>


            <div class="panel-body">

                <!-- Contain Here -->

                <div class="col-md-2">
                    <div class="form-group">
                        <select id="application_status" asp-items="@Model.statuslist" class="form-control">
                         
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        
                        <select id="schem_id" asp-items="@Model.schemelist" class="form-control select2">
                            <option  selected value="null">--Search By Scheme--</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <button type="button" id="dateSearchButton" class="btn btn-info push-left">Search </button>

                    </div>
                </div>

            </div>

        </div>
        </form>
    </div>
</div>
<div class="card-box">
    <div class="row">
        <partial name="_LayoutTable" />
    </div>
</div>
@section Scripts {
    <script>
        var myApp = myApp || {};
        myApp.purposeId = '@Model.RouteData.Values["purposeId"]';
    </script>

    <script src="~/js/applicationList.js" asp-append-version="true"></script>

    @{
        <partial name="_ValidationScriptsPartial" />
        <partial name="_Notification" />
    }
}