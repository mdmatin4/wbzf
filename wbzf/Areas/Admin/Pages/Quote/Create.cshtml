@page
@model wbzf.Areas.Admin.Pages.Quote.CreateModel
@{
    if (Model.quote.Id==0)
    {
        ViewData["Title"] = "Create New";
    }
    else
    {
        ViewData["Title"] = "Update Quotation" ;
    }

}
<div class="row">
    <div class="col-xs-12">
        <div class="page-title-box">
            <h4 class="page-title"> @ViewData["Title"] </h4>
            <ol class="breadcrumb p-0 m-0">
                <li>
                    <a asp-area="" asp-page="/Index">Home</a>
                </li>
                <li>
                    <a asp-page="/Quote/Index">Quotations</a>
                </li>
                <li class="active">
                    @ViewData["Title"]
                </li>

            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- end row -->

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">

            <form class="form-horizontal" method="post">
                <input asp-for="quote.Id" type="hidden" />
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="quote.Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="quote.Name" class="form-control" />
                        <span asp-validation-for="quote.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="quote.statement" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <textarea asp-for=quote.statement class=form-control ></textarea>
                        <span asp-validation-for="quote.statement" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group m-b-0">
                    <div class="col-sm-offset-3 col-sm-9">
                        @if (Model.quote.Id==0)
                        {
                            <button type="submit" class="btn btn-info waves-effect waves-light">Create</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-info waves-effect waves-light">Update</button>
                        }

                        <a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back to List</a>

                    </div>
                </div>
            </form>

        </div>
    </div>
</div>


@section Scripts{
	@{
    <partial name="_ValidationScriptsPartial" />
	}
}
