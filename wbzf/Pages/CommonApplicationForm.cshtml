@page
@using wbzf.Utility;
@using wbzf.Model.ViewModel;
@model wbzf.Pages.CommonApplicationFormModel
@{
    @if (Model.scheme != null)
    {
        ViewData["Title"] = "Beneficiary Registration";
    }
}

<section class="promo-primary  promo-primary--shop">
    <picture>
        <source srcset="img/all page header.jpg" media="(min-width: 992px)" /><img class="img--bg" src="img/all page header.jpg" alt="img" />
    </picture>

    <div class="container">
        <div class="row">
            <div class="col-auto">
                <div class="align-container">
                    <div class="align-container__item">
                        <span class="promo-primary__pre-title">WBZF</span>

                        <h1 class="promo-primary__title"><span>Beneficiary </span><span> Registration </span></h1>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<form method="post" id="student" enctype="multipart/form-data">

    <div class="container">
        <div class="col-lg-12">
            <div class="panel-body" style="padding-top:50px;">

                <div class="panel panel-color panel-teal x">
                    <div class="panel-heading">
                        <h3 class="panel-title">Scheme Details</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">

                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <label>Apply For <span class="text-danger"></span></label>
                                    @if (Model.scheme != null)
                                    {
                                        <input class="form__field" type="text" disabled asp-for=@Model.scheme.Name class="form-control" requried>
                                        <input type="hidden" asp-for="InputModel.SchemeId" value="@Model.scheme.Id" />

                                    }
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <label>Purpose <span class="text-danger"></span></label>
                                    @if (Model.scheme != null)
                                    {
                                        <input class="form__field" type="text" disabled asp-for="@Model.scheme.Purpose.Name" class="form-control" requried>
                                        <input type="hidden" asp-for="InputModel.PurposeId" value="@Model.scheme.purposeId" />
                                    }
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

                <div class="panel panel-color panel-teal x">
                    <div class="panel-heading">


                        <h3 class="panel-title">Personal Details</h3>

                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <label>Name of the Applicant <span class="text-danger">(*)</span></label>
                                    <input class="form__field" required type="text" asp-for=InputModel.Full_Name class="form-control"  placeholder="Enter Applicant's Name">
                                    <span asp-validation-for="InputModel.Full_Name" class=" text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <label>Gender</label>
                                    <select class="form__field" required asp-for="InputModel.Gender" class="form-control">
                                        <option disabled selected>--Please Select Gender--</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Others">Others</option>

                                    </select>
                                    <span asp-validation-for="InputModel.Gender" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <label>Date of Birth</label>
                                    <div>
                                        <div class="input-group">
                                            <input type="date" required class="form__field" asp-for="InputModel.DateofBirth" maxlength="10" oninput="javascript: if (this.value.length> this.maxLength) this.value = this.value.slice(0, this.maxLength);" class="form-control datepicker" autocomplete="off">
                                            <span class="input-group-addon bg-custom b-0"><i class="mdi mdi-calendar text-white"></i></span>
                                            <span asp-validation-for="InputModel.DateofBirth" class="text-danger"></span>
                                        </div>
                                        <!-- input-group -->
                                    </div>
                                </div>
                            </div>


                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <label>Aadhaar No</label>
                                    <input class="form__field" required asp-for="InputModel.adhaarno" min="0" type="number" required maxlength="12" oninput="javascript: if (this.value.length> this.maxLength) this.value = this.value.slice(0, this.maxLength);" placeholder="Enter Aadhaar Number">
                                    <span asp-validation-for="InputModel.adhaarno" class="text-danger"></span>
                                </div>
                            </div>



                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <label>Category</label>
                                    <select class="form__field" required asp-for="InputModel.category" class="form-control">
                                        <option disabled selected>--Please Select Category--</option>
                                        <option value="@SD.GEN">@SD.GEN</option>
                                        <option value="@SD.OBC_A">@SD.OBC_A</option>
                                        <option value="@SD.OBC_B">@SD.OBC_B</option>
                                        <option value="@SD.SC">@SD.SC</option>
                                        <option value="@SD.ST">@SD.ST</option>

                                    </select>
                                    <span asp-validation-for="InputModel.category" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <label>Profession <span class="text-danger">(*)</span></label>
                                    <select class="form__field" required asp-for="InputModel.ProfessionId" asp-items="@Model.professionlist" class="form-control select2">
                                        <option disabled selected>--Please Select Profession--</option>
                                    </select>
                                    <span asp-validation-for="InputModel.ProfessionId" class=" text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <label>Mobile No <span class="text-danger">(*)</span> </label>
                                    <input class="form__field" required type="number" asp-for=InputModel.PhoneNumber min="0" maxlength="10" oninput="javascript: if (this.value.length> this.maxLength) this.value = this.value.slice(0, this.maxLength);" class="form-control" requried placeholder="Enter Your Mobile No">
                                    <span asp-validation-for="InputModel.PhoneNumber" class=" text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    <label>Email<span class="text-danger">(*)</span></label>
                                    <input class="form__field" asp-for=InputModel.Email class="form-control"  placeholder="Enter Your Email">
                                    <span asp-validation-for="InputModel.Email" class=" text-danger"></span>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
                <!-- /.col -->
                <div class="panel panel-color panel-teal x">
