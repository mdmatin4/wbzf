@page
@model wbzf.Areas.Admin.Pages.NewsLink.CreateModel
@{
    
    if (Model.newslink.Id==0)
    {
        ViewData["Title"] = "Create New NewsLink";
    }
    else
    {
        ViewData["Title"] = "Update NewsLink";
    }
}

<div class="row">
    <div class="col-xs-12">
        <div class="page-title-box">
            <h4 class="page-title"> @ViewData["Title"] </h4>
            <ol class="breadcrumb p-0 m-0">
                <li>
                    <a asp-area="" asp-page="/Index">Home</a>
                </li>
                <li>
                    <a asp-page="/NewsLink/Index" >NewsLink</a>
                </li>
                <li class="active">
                    @ViewData["Title"]
                </li>

            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- end row -->


<form method="post" enctype="multipart/form-data">
    <input asp-for=newslink.Id hidden />
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-color panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title"> @ViewData["Title"]</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <span style="color: red" asp-validation-summary="All"> </span>
                            <div class="col-12">
                                <div class="form-group row">
                                    <label asp-for="newslink.Title" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="newslink.Title" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="newslink.Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="newslink.NewsOrganizationName" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="newslink.NewsOrganizationName" class="form-control" autocomplete="off" />
                                       
                                        <span asp-validation-for="newslink.NewsOrganizationName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="newslink.NewsLink" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="newslink.NewsLink" class="form-control" autocomplete="off" />
                                        <span class="text-muted">(Leave empty if it doesn't have any link)</span>
                                        <span asp-validation-for="newslink.NewsLink" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label asp-for="newslink.displayOrder" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="newslink.displayOrder" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="newslink.displayOrder" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label asp-for=newslink.ImageUrl class="col-sm-2 col-form-label">Upload Image </label>
                                    <div class="col-sm-10">
                                        <input type="file" name="files" id="uploadimage" />
                                        <div id="dvPreview">
                                        </div>
                                    </div>
                                    <span asp-validation-for="newslink.ImageUrl" class="text-danger"></span>
                                </div>
                                @if (Model.newslink.Id != 0)
                                {
                                    <img src="@Model.newslink.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                                }

                            </div>
                            <div class="btn-group m-b-10 pull-right">
                                @*  <button type="submit" class="btn btn-warning btn-group-lg waves-effect waves-light" asp-page-handler="Preview">Preview</button>*@
                                <button type="submit" class="btn btn-info btn-group-lg waves-effect waves-light" asp-page-hadnler="Save">Save</button>

                            </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>

@section scripts{

    @{
    <partial name="_ValidationScriptsPartial" />
	}

}


