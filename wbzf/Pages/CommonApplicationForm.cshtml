                                                <label>Guardian's Details</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">

                                    <div id="mother_details">
                                        <div class="row">
                                            <div class="col-lg-6 col-sm-6">
                                                <div class="form-group">
                                                    <input class="form__field" required asp-for=InputModel.Mother_Name placeholder="Enter Mother's Name" />
                                                    <span class="text-danger" asp-validation-for=InputModel.Mother_Name></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-sm-6">
                                                <div class="form-group">
                                                    @* <label>Family Income <span class="text-danger">(*)</span> </label> *@
                                                    <input class="form__field" required type="number" asp-for="InputModel.motherIncome" min="0" class="form-control" placeholder="Enter Your Family Monthly Income">
                                                    <span asp-validation-for="InputModel.motherIncome " class=" text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-sm-6">
                                                <div class="form-group">
                                                    <select asp-for="InputModel.motherOccupationId" required asp-items="Model.professionlist" class="form__field">
                                                        <option disabled selected>--Please Select Mother's Occupation--</option>
                                                    </select>
                                                    <span asp-validation-for="InputModel.motherOccupationId" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="father_details">
                                        <div class="row">
                                            <div class="col-lg-6 col-sm-6">
                                                <div class="form-group">
                                                    <input class="form__field" asp-for=InputModel.FatherName required placeholder="Enter Father's Name" />
                                                    <span class="text-danger" asp-validation-for=InputModel.FatherName></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-sm-6">
                                                <div class="form-group">
                                                    @* <label>Family Income <span class="text-danger">(*)</span> </label> *@
                                                    <input class="form__field" required type="number" asp-for="InputModel.fatherIncome" min="0" class="form-control" placeholder="Enter Your Family Monthly Income">
                                                    <span asp-validation-for="InputModel.fatherIncome " class=" text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-sm-6">
                                                <div class="form-group">
                                                    <select asp-for="InputModel.fatherOccupationId" required asp-items="Model.professionlist" class="form__field">
                                                        <option disabled selected>--Please Select Father's Occupation--</option>
                                                    </select>
                                                    <span asp-validation-for="InputModel.fatherOccupationId" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div id="guardian_details">
