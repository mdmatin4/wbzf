@using Microsoft.AspNetCore.Identity
@using wbzf.Model

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    
        <a id="manage" class="nav-link" asp-area="Admin" asp-page="/Dashboard" title="Manage">Hello @UserManager.GetUserName(User)</a>
    
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-link nav-link">Logout</button>
        </form>
    
}
else
{
   <a id="login" asp-area="Identity" asp-page="/Account/Login">Member Login</a>
}
